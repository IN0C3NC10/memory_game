  aberta: boolean;
  //se a img esta aberta ou fechada
  status: boolean;

implementation

{$R *.dfm}


//OnCreate
procedure TfrmJogo.FormCreate(Sender: TObject);
begin
  carta:= '';
  limite:= 0;
  npares:= 9;
  aberta:= false;
  DoubleBuffered:=True; //Não piscar a imagens
end;

//TIMER
